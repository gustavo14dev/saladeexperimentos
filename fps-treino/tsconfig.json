{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,

    "lib": ["ES2020", "DOM"],
    "types": [],

    "noEmit": true,
    "isolatedModules": true,
    "resolveJsonModule": true,

    "allowImportingTsExtensions": false
  },
  "include": ["src"]
}
