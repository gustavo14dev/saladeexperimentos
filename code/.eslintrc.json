{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off",
    "semi": ["warn", "always"],
    "quotes": ["warn", "single", { "avoidEscape": true }],
    "indent": ["warn", 4],
    "comma-dangle": ["warn", "never"],
    "no-var": "warn",
    "prefer-const": "warn"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "parser": "espree",
      "parserOptions": {
        "sourceType": "script"
      }
    }
  ]
}
